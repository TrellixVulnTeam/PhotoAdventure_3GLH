<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.photoadventure.photoadventure.ChangePhoto">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        android:scaleType="centerCrop"
        android:src="@drawable/set_image"/>

    <Button
        android:id="@+id/selectPhoto"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:text="Select new photo from gallery"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/takePhoto"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:text="Take a new photo"
        app:layout_constraintTop_toBottomOf="@+id/selectPhoto"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/changePhoto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Save the change"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
